<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="10dp">

    <RelativeLayout
        android:id="@+id/linearLayout_mybooks"
        android:layout_width="120dp"
        android:layout_height="240dp"
        android:orientation="vertical"
        android:weightSum="100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.065"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.033">

        <androidx.cardview.widget.CardView
            android:id="@+id/image_cardView"
            android:layout_width="120dp"
            android:layout_height="150dp"
            app:cardCornerRadius="5dp">

            <ImageView
                android:id="@+id/books_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/teal_200" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_below="@id/image_cardView"
            android:id="@+id/books_nametv_mybooks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lay Yuu Thone Thone "
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_below="@id/books_nametv_mybooks"
            android:id="@+id/authors_tv_mybooks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Authors"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/select_img_user_books"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/check"
        android:backgroundTint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>